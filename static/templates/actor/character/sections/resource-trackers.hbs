<div class="header">{{localize "gurps.character.resource_trackers.title"}}</div>
<div class="fieldblock6">
	{{#each attributes.resourceTrackers}} {{#if (and (eq this.max 0) (eq this.min 0))}}
	<div class="points"></div>
	<div class="field" style="grid-column: 2 / span 3">
		<input type="text" name="resource_trackers.{{this.id}}.damage" value="{{this.current}}" data-dtype="Number" />
	</div>
	{{else}}
	<div class="points"></div>
	<div class="field">
		<input type="text" name="resource_trackers.{{this.id}}.damage" value="{{this.current}}" data-dtype="Number" />
	</div>
	<label>{{localize "gurps.character.pool_of"}}</label>
	<div class="field">
		<input type="text" value="{{this.max}}" data-dtype="Number" disabled />
	</div>
	{{/if}}
	<label>{{this.definition.name}}</label>
	<div class="label tooltip">
		{{#if this.currentThreshold.state}} [{{this.currentThreshold.state}}] {{#if this.currentThreshold.explanation}}
		<span class="tooltiptext">{{{this.currentThreshold.explanation}}}</span>
		{{/if}} {{/if}}
	</div>
	{{/each}}
</div>
